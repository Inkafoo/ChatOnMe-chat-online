<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/dateTextViewMessageTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_date"
            android:textColor="@color/textColorBlack"
            android:textSize="12sp"
            android:background="@drawable/rounded_corners"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toLeftOf="@id/textMessageTo"
            app:layout_constraintRight_toRightOf="@id/textMessageTo"
            app:layout_constraintBottom_toTopOf="@id/textMessageTo" />

        <TextView
            android:id="@+id/textMessageTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_message"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/small_font"
            android:maxWidth="240dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/primaryLightColor"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toLeftOf="@id/userImageTo"
            app:layout_constraintTop_toTopOf="@id/dateTextViewMessageTo" />

        <ImageView
            android:id="@+id/userImageTo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_account_circle_grey"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textMessageTo"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
