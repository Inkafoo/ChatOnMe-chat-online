<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userImageFrom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_black"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textMessageFrom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textMessageFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_message"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/small_font"
            android:maxWidth="240dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#B6B6B6"
            android:padding="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/userImageFrom"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>